<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhiteSecondary</item>
        <item name="colorAccent">@color/colorBlueGray</item>
        <item name="colorTextBold">@color/colorBlack</item>
        <item name="colorDivider">@color/colorGray</item>
        <item name="android:statusBarColor">@color/colorWhiteSecondary</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorBlackSecondary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlueGray</item>
        <item name="colorTextBold">@color/colorWhite</item>
        <item name="colorDivider">@color/colorGrayDark</item>
        <item name="android:statusBarColor">@color/colorBlackSecondary</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="colorPrimary">@color/colorBlueGray</item>
        <item name="colorPrimaryDark">@color/colorBlueGray</item>
        <item name="colorAccent">@color/colorBlueGray</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
