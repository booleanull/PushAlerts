<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorWhiteSecondary</item>
        <item name="colorAccent">@color/colorBlueGray</item>
        <item name="colorError">@color/colorPinkRed</item>
        <item name="colorTextBold">@color/colorBlack</item>
        <item name="colorDivider">@color/colorGray</item>
        <item name="colorBackground">@color/colorWhite</item>
        <item name="colorBackgroundVariant">@color/colorWhite</item>

        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:navigationBarColor">@color/colorWhite</item>

        <item name="bottomSheetDialogTheme">@style/AppTheme.BottomSheetDialogTheme</item>
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheetDialogTheme</item>

        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>

        <item name="android:windowSoftInputMode">adjustNothing</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlackSecondary</item>
        <item name="colorAccent">@color/colorBlueGray</item>
        <item name="colorError">@color/colorPinkRed</item>
        <item name="colorTextBold">@color/colorWhite</item>
        <item name="colorDivider">@color/colorGrayDark</item>
        <item name="colorBackground">@color/colorBlack</item>
        <item name="colorBackgroundVariant">@color/colorBlackSecondary</item>

        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:statusBarColor">@color/colorBlackSecondary</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:colorBackground">@color/colorBlack</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>

        <item name="bottomSheetDialogTheme">@style/AppTheme.Dark.BottomSheetDialogTheme</item>
        <item name="bottomSheetStyle">@style/AppTheme.Dark.BottomSheetDialogTheme</item>

        <item name="android:alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
        <item name="android:dialogTheme">@style/AppTheme.Dialog</item>
        <item name="dialogTheme">@style/AppTheme.Dialog</item>

        <item name="android:windowSoftInputMode">adjustNothing</item>
    </style>

    <!-- Buttons -->
    <style name="AppTheme.MaterialButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/default_radius</item>
        <item name="backgroundTint">@color/custom_material_button_background</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="android:layout_marginStart">@dimen/default_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>

    <!-- Texts -->
    <style name="AppTheme.Text" />

    <!-- Texts Title -->
    <style name="AppTheme.Text.Title">
        <item name="android:textColor">?attr/colorTextBold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Title.H3">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Text.Title.H4">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.Title.H5">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text Description -->
    <style name="AppTheme.Text.Description" />

    <style name="AppTheme.Text.Description.H3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Text.Description.H4">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.Description.H5">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.Text.Error" parent="AppTheme.Text.Description.H5">
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="AppTheme.Dark.BottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="AppTheme.BottomSheetDialogTheme" parent="AppTheme.BottomSheetDialog">
        <item name="colorPrimary">@color/colorBlueGray</item>
        <item name="colorPrimaryDark">@color/colorBlueGray</item>
        <item name="colorAccent">@color/colorBlueGray</item>
        <item name="colorBackground">@color/colorWhite</item>
        <item name="colorBackgroundVariant">@color/colorWhite</item>
        <item name="colorTextBold">@color/colorBlack</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Dark.BottomSheetDialogTheme" parent="AppTheme.Dark.BottomSheetDialog">
        <item name="colorPrimary">@color/colorBlueGray</item>
        <item name="colorPrimaryDark">@color/colorBlueGray</item>
        <item name="colorAccent">@color/colorBlueGray</item>
        <item name="colorBackground">@color/colorBlackSecondary</item>
        <item name="colorBackgroundVariant">@color/colorBlack</item>
        <item name="colorTextBold">@color/colorWhite</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <!-- Dialog -->
    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorBlueGray</item>
        <item name="colorPrimaryDark">@color/colorBlueGray</item>
        <item name="colorAccent">@color/colorBlueGray</item>
    </style>

    <style name="AppTheme.Dialog.NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorBlueGray</item>
    </style>

    <style name="AppTheme.Dialog.PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorBlueGray</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorBlueGray</item>
        <item name="colorPrimaryDark">@color/colorBlueGray</item>
        <item name="colorAccent">@color/colorBlueGray</item>
    </style>
</resources>
